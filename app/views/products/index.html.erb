<p id="notice"><%= notice %></p>

<h1>Products</h1>



<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-6 content-secondary">
        <%= image_tag(product.image_url, class: "img-responsive center")unless product.image_url.blank?%>
      </div>
      <div class="col-6 content-main" id="product_rows">
        <a href="#"><h1><%= product.name %></h1></a>
        <p><%= product.description %></p>
        <p><%= product.color %></p>
        <p><%= product.price %></p>
      </div>

    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Product', new_product_path %>

