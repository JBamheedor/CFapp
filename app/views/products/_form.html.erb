<%= form_with(model: product, local: true, html: {class: 'form-horizontal'}) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= form.text_field :name, id: :product_name, class:"form-control", type:"text" %>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :description, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= form.text_area :description, id: :product_description, class:"form-control", type:"text" %>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :image_url, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= form.text_field :image_url, id: :product_image_url, class:"form-control", type:"url" %>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :color, class:"col-sm-2 control-label" %><br>
    <div class="col-sm-10">
    <%= form.text_field :color, id: :product_color, class:"form-control", type:"text" %>
  </div>
  </div>

  <div class="field form-group">
    <%= form.label :price, class:"col-sm-2 control-label" %><br>
    <div class="col-sm-10">
    <%= form.text_field :price, id: :product_price, class:"form-control", type:"number" %>
  </div>
  </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= form.submit class:"btn btn-success active", type:"submit" %>
  </div>
  </div>

<% end %>
