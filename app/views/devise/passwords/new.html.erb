<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-forgottenpassword" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <!-- <%= f.label :email %><br /> -->
    <%= f.email_field :email, autofocus: true, class:"form-control", id:"ForgottenPasswordEmail", autocomplete: "email", placeholder:"Email address" %>
  </div>

  <div class="actions">
    <%= f.submit "Send reset instructions", class:"btn btn-primary btn-block", type:"button" %>
  </div>
<% end %>

  <div class="form_links">
   <%= render "devise/shared/links" %>
 </div>
