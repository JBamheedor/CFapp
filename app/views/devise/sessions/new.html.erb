<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
  <div class="field form-group">
    <!-- <%= f.label :email %><br /> -->
    <%= f.email_field :email, autofocus: true, class:"form-control", id:"SignInEmail", autocomplete: "email", placeholder:"Email address" %>
  </div>

  <div class="field form-group">
    <!-- <%= f.label :password %><br /> -->
    <%= f.password_field :password, class:"form-control", id:"SignInPassword", autocomplete: "off", placeholder:"Password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-lg btn-success btn-block", type:"submit" %>
  </div>
<% end %>

  <div class="form_links">
    <%= render "devise/shared/links" %>
  </div>
