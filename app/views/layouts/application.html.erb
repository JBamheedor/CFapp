            <div class="text-center">
              <ul class="list-unstyled list-inline">
                <li class="list-inline-item"><%= link_to image_tag('logos/006-facebook.png', :class => "img-responsive social")%></li>
                <li class="list-inline-item"><%= link_to image_tag('logos/005-instagram.png', :class => "img-responsive social")%></li>
                <li class="list-inline-item"><%= link_to image_tag('logos/004-youtube.png', :class => "img-responsive social")%></li>
                <li class="list-inline-item"><%= link_to image_tag('logos/001-pinterest.png', :class => "img-responsive social")%></li>
                <li class="list-inline-item"><%= link_to image_tag('logos/002-medium.png', :class => "img-responsive social")%></li>                      <li class="list-inline-item"><%= link_to image_tag('logos/003-linkedin.png', :class => "img-responsive social")%></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
