<div class="headers">
  <h1>Get in touch</h1>
</div>

<p>This is how you can get in touch with us...</p>

<%= flash[:notice] %>

<%= form_with(url:"/simple_pages/thank_you", method: "post", local: true, html: {class: "form-contact"}) do |form| %>
<div class="contact_box">
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter Name" %>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "Enter Email" %>
  </div>
  <div class="form-group">
    <%= form.label :message %>
    <%= form.text_area :message, class: "form-control", placeholder: "Enter Message", rows: 5 %>
  </div>
  <div class="form-group">
  <%= form.submit "Send", class:"btn btn-success", id:"ContactSendButton", type:"button" %>
  </div>
</div>
<% end %>
