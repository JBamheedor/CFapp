<div class="jumbotron headers">
  <h1>Contact us</h1>
  <p>Send us any questions or concerns</p>
</div>
<div class="container forms">
  <%= flash[:notice] %>
  <%= form_tag("/simple_pages/thank_you", html: {class: "form-contact"}) do %>
      <div class="form-row contact_box">
        <div class="form-group ">
          <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name", :required => true %>
        </div>
        <div class="form-group ">
          <%= email_field_tag :email, nil, class: "form-control", placeholder: "Enter Email", :required => true %>
        </div>
        <div class="form-group ">
         <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message", rows: 8, :required => true %>
        </div>
        <div class="form-group ">
        <%= submit_tag "Send Message", class: "btn btn-success", id:"ContactSendButton", type:"button" %>
      </div>
    </div>
  <% end %>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 contact">
      <p><span class="glyphicon glyphicon-earphone" aria-hidden="true"></span>1-800-426-4840</p>
      <p>Mon–Fri, 5am–10pm PT
      Sat–Sun, 6am–9pm PT</p>
    </div>
    <div class="col-md-4 contact">
      <p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>Budapester Strasse 63</p>
      <p>Berlin</p>
      <p>23999</p>
    </div>
    <div class="col-md-4 contact">
      <p><span class="glyphicon glyphicon-headphones" aria-hidden="true"></span>Live Chat</p>
      <p>Mon–Fri, 5am–10pm PT
      Sat–Sun, 6am–9pm PT</p>
    </div>
  </div>
  <div class="map-responsive">
  <iframe frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=place_id:ChIJAVkDPzdOqEcRcDteW0YgIQQ&key=AIzaSyCpJmOlwl-gje6HSdEnJrFAsRjNk5GUrsk" allowfullscreen></iframe>
  </div>
</div>
